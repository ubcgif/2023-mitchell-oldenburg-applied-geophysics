doi = {10.1016/j.jappgeo.2015.01.016},
file = {:C\:/Users/mamitchell/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Butler, Pitka, Spiteri - 2015 - An analysis of errors caused by leakage currents and unintentional potential groundings in the electrica.pdf:pdf},
issn = {09269851},
journal = {Journal of Applied Geophysics},
keywords = {Current leakage,Error analysis,Resistivity},
pages = {251--258},
publisher = {Elsevier B.V.},
title = {{An analysis of errors caused by leakage currents and unintentional potential groundings in the electrical resistivity method}},
volume = {114},
year = {2015}
}
