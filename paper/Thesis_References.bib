@phdthesis{Bostock1988,
abstract = {Solution/collapse structures pose a serious economic threat to potash'mines in Saskatchewan due to flooding. This study encompasses the first phase of a joint Queen's University - Potash Corporation of Saskatchewan (PCS) research project, and. investigates the delineation of solution/collapse structures using in-seam seismic techniques. Three seismic survey experiments were performed at the PCS Rocanville mine where a collapse structure is located within a 1800 m X 1830 m mining panel. Two of these experiments were designed to collect data suitable for tomographic imaging. In the first survey approximately 9000 waveforms were measured on hydrophones at 96 source/receiver locations about the panel. Data required comprehensive signal processing to improve signal to noise ratios and permit estimation of P- and S-wave traveltimes for tomographic inversion. Three component data were measured in the second survey at 48 source/receiver locations and processed using polarization analysis techniques to estimate traveltimes more accurately and permit a preliminary analysis of attenuation. Traveltime data from both surveys were processed using algebraic reconstruction (ART) and matrix inversion (SVD) techniques to yield velocity images. The final experiment investigated the possibility of a back-scattering response from the structure using a standard CDP reflection survey setup within the plane of the panel. The effects of head waves on tomographic imaging observed in a pilot study were eliminated through the application of a band-pass filter. Results indicate that the extent and magnitude of an anomalous seismic response characterizing the structure are less pronounced than originally predicted. Velocity contrasts are too low to provide reliable results from the ART algorithm. SVD images of P-wave velocity reveal a restricted low-velocity zone appropriately located and probably attributable to the collapse structure. Stacked CDP sections from the third survey failed to record any reflections from the structure indicating that the acoustic impedance contrast between the disturbed zone and the unaffected rock mass is likely gradational rather than abrupt. The" lack of a more definitive response dictates that future work focus on determining more precisely the diagnostic physical properties of the collapse zone. Data from more detailed seismic studies interpreted in conjunction with those from other geophysical methods should provide this information.},
author = {Bostock, M.G.},
file = {:C\:/Users/mamitchell/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Bostock - 1988 - Seismic detection of collapse structures Case Study at Rocanville Mine, Saskatchewan.pdf:pdf},
isbn = {0315722568},
pages = {1--126},
school = {Queen's University},
title = {{Seismic detection of collapse structures: Case Study at Rocanville Mine, Saskatchewan}},
type = {Master of Science},
year = {1988}
}
@article{Butler2015,
abstract = {A common error in the electrical resistivity method occurs when a cable connecting to a current or potential electrode is inadvertently grounded at a point other than the intended electrode, thus creating an extra electrode. In this paper, we derive expressions for the magnitude of the induced error of the inadvertent electrode as a function of the position for a homogeneous infinite half-space for a general four-electrode array. We also derive a general expression for the magnitude of the error in terms of the current densities for ground with a general resistivity distribution. We compare the theoretical results for homogeneous ground with small-scale field surveys and find them to be in good agreement. We show that the error in the measured apparent resistivity has a value that is proportional to the apparent resistivity for an array made up of the inadvertent electrode and the electrode to which it is connected. We find that the induced error becomes very large if the additional electrode is a current electrode and it is placed near a potential electrode or if it is a potential electrode and it is placed near a current electrode. The magnitude of the error is the same whether the additional electrode is a current electrode or a potential electrode. The induced error approaches a constant non-zero value as the additional electrode is moved towards infinity. Resistivity heterogeneity in the ground can either increase or decrease the error depending on the sensitivity of the array formed by the inadvertent electrode and the electrode to which it is connected.},
